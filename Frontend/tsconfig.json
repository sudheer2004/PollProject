{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",         
    "paths": {
      "@/*": ["src/*"]    
    },
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
